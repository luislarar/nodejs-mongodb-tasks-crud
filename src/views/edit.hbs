<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <div class="card card-body bg-dark p-4 text-white rounded-0">
        <h3>Update a Task</h3>
        <form action="/tasks/{{task._id}}/edit" method="POST">
          <div class="mb-3">
            <input
              type="text"
              name="title"
              placeholder="Title"
              class="form-control rounded-0 bg-dark text-white"
              value="{{task.title}}"
            />
          </div>
          <div class="mb-3">
            <textarea
              name="description"
              rows="3"
              placeholder="Add a Description"
              class="form-control rounded-0 bg-dark text-white"
            >{{task.description}}</textarea>
          </div>
          <button class="btn btn-primary">Update</button>
        </form>
      </div>
    </div>
  </div>
</div>